<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94bd31"
    android:padding="15dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:layout_alignStart="@+id/PrecoDoAlcoolId"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/PrecoDaGasolinaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="183dp"
        android:layout_marginTop="168dp"
        android:text="Preço da Gasolina"
        android:textSize="@dimen/fontePrincipal"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="148dp" />

    <TextView
        android:id="@+id/PrecoDoAlcoolId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PrecoDaGasolinaId"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:text="Preço do Alcool"
        android:textSize="@dimen/fontePrincipal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/txtAlcool"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/lblVerificado"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="-78dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtGasolina"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/txtAlcool"
        android:layout_alignEnd="@+id/lblVerificado"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-269dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnVerificar"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="21dp"
        android:text="Verificar"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="309dp" />

    <TextView
        android:id="@+id/lblVerificado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/PrecoDaGasolinaId"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-131dp"
        android:layout_marginBottom="107dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="407dp" />

</RelativeLayout>